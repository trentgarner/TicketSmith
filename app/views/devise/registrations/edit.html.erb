<div class="row justify-content-center">
  <div class="col-12 col-lg-7">
    <h2 class="mb-3">Account Settings</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
          html: { method: :put, class: "card card-body" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-warning">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <h3 class="h5 mt-2">Preferences</h3>

      <div class="mb-3">
        <%= f.label :assignee_name, "My tickets label", class: "form-label" %>
        <%= f.text_field :assignee_name, autocomplete: "nickname", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :wip_limit, "WIP limit", class: "form-label" %>
        <%= f.number_field :wip_limit, min: 1, class: "form-control" %>
      </div>

      <div class="form-check mb-3">
        <%= f.check_box :reminders_enabled, class: "form-check-input" %>
        <%= f.label :reminders_enabled, "Enable reminders", class: "form-check-label" %>
      </div>

      <div class="d-flex flex-wrap gap-2 mb-4">
        <%= f.submit "Save changes", class: "btn btn-primary" %>
        <%= link_to "Back", :back, class: "btn btn-outline-secondary" %>
      </div>

      <h3 class="h5">Security</h3>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <div class="form-text mb-1">Leave blank if you don't want to change it.</div>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <div class="form-text"><%= @minimum_password_length %> characters minimum</div>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :current_password, class: "form-label" %>
        <div class="form-text mb-1">We need your current password to confirm your changes.</div>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="d-flex flex-wrap gap-2">
        <%= f.submit "Update", class: "btn btn-primary" %>
        <%= link_to "Back", :back, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>

    <div class="card card-body mt-4 border-danger">
      <h3 class="h5 text-danger">Cancel my account</h3>
      <p class="mb-2">Unhappy? This will permanently remove your account.</p>
      <%= button_to "Cancel my account", registration_path(resource_name),
            data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
            method: :delete, class: "btn btn-outline-danger" %>
    </div>
  </div>
</div>
